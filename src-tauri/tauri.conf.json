{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "NexusMQTT",
  "version": "0.1.0",
  "identifier": "com.ziseek.mqttnexus",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "splashscreen",
        "title": "NexusMQTT",
        "url": "splashscreen.html",
        "width": 620,
        "height": 420,
        "center": true,
        "resizable": false,
        "maximizable": false,
        "minimizable": false,
        "closable": false,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "javascriptDisabled": true,
        "backgroundColor": "#070D18"
      },
      {
        "label": "main",
        "title": "NexusMQTT",
        "create": false,
        "width": 1500,
        "height": 920,
        "center": true,
        "minWidth": 1100,
        "minHeight": 700,
        "resizable": true,
        "visible": false,
        "backgroundColor": "#0B1424"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico",
      "icons/icon.png",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns"
    ]
  }
}
